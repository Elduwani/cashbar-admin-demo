{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@controllers/*": [
        "app/controllers/*"
      ],
      "@styles/*": [
        "app/styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}